<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@android:color/holo_blue_light" android:fillViewport="true">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp" android:gravity="center">
        <TextView android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Registrar Datos Médicos" android:textSize="24sp" android:textStyle="bold" android:textColor="@android:color/black" android:layout_marginBottom="10dp" android:gravity="center"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:background="@android:color/white" android:elevation="8dp" android:padding="24dp" android:layout_margin="10dp" android:gravity="center_horizontal" android:radius="20dp">
            <Spinner android:id="@+id/type_spinner" android:layout_width="match_parent" android:layout_height="48dp" android:background="@android:color/white" android:elevation="3dp" android:layout_marginBottom="12dp" android:entries="@array/tipo_dato_medico"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:background="@android:color/white" android:elevation="3dp" android:padding="12dp" android:layout_marginBottom="12dp">
                <EditText android:id="@+id/date_input" android:layout_width="0dp" android:layout_weight="1" android:layout_height="48dp" android:hint="Fecha" android:padding="12dp" android:textSize="16sp" android:focusable="false" android:clickable="true"/>
                <ImageView android:id="@+id/calendar_icon" android:layout_width="36dp" android:layout_height="48dp" android:contentDescription="Ícono de calendario" android:padding="8dp" android:src="@android:drawable/ic_menu_my_calendar"/>
            </LinearLayout>
            <EditText android:id="@+id/vet_name" android:layout_width="match_parent" android:layout_height="48dp" android:hint="Nombre de la Veterinaria" android:padding="12dp" android:background="@android:color/white" android:elevation="3dp" android:textSize="16sp" android:layout_marginBottom="12dp"/>
            <EditText android:id="@+id/doctor_name" android:layout_width="match_parent" android:layout_height="48dp" android:hint="Nombre del Veterinario" android:padding="12dp" android:background="@android:color/white" android:elevation="3dp" android:textSize="16sp" android:layout_marginBottom="12dp"/>
            <EditText android:id="@+id/procedure_name" android:layout_width="match_parent" android:layout_height="48dp" android:hint="Ingresar nombre del procedimiento" android:padding="12dp" android:background="@android:color/white" android:elevation="3dp" android:textSize="16sp" android:layout_marginBottom="12dp"/>
            <EditText android:id="@+id/procedure_description" android:layout_width="match_parent" android:layout_height="100dp" android:hint="Ingresar descripción" android:padding="12dp" android:background="@android:color/white" android:elevation="3dp" android:textSize="16sp" android:layout_marginBottom="16dp"/>
            <Button android:id="@+id/button_save" android:layout_width="match_parent" android:layout_height="50dp" android:text="GUARDAR REGISTRO" android:textSize="18sp" android:textColor="@android:color/white" android:backgroundTint="@android:color/holo_blue_dark" android:elevation="6dp" android:layout_marginTop="10dp" android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>